<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/newdesign.css")" rel="stylesheet" type="text/css" />
    <link rel="shortcut icon" href="@Url.Content("~/Content/images/favicon.ico")" /> 
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    @RenderSection("header", required: false)
</head>

<body>
    <div id="main">

    	<div class="container">

        	<div id="header">

            	<ul id="menu">
                	<li><a href="/">Popular News</a></li>
                	<li><a href="/News">Recent News</a></li>
               </ul>

               <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
                </div>

            	
                <a id="logo" href="/" style="display:block;"></a>

                <div id="logoText">
                	<h1>Hilur</h1>
                    <small>Armenian News Aggregate</small>
                </div>

            </div>

            
            @RenderBody()

        </div>

    </div>

    <div id="footer">

    	<div class="container">

        	<div class="footer_column long">
                <h3>Developed by Mher Sarkissian</h3>
                <p>HiLUR gets its news feed from <a href="http://groong.org">groong.org</a></p>
			</div>

	        <div class="footer_column">
                <h3>More Links</h3>
				<ul>
                    <li><a href="http://groong.org">Groong</a></li>            		
                </ul>
            </div>

            <div class="footer_column">
                <h3>other sites</h3>
				<ul>
                    <li><a href="http://mher.info">Mher.info</a></li>
            		
                </ul>
            </div>

        </div>


    </div>
</body>
</html>
